    case "--ll_prof":
    case "--perf_basic_prof":
    case "--perf_jit_prof":
    case "--gc_fake_mmap":
    case "--log_internal_timer_events":
    case "--log_timer_events":
    case "--log_instruction_stats":
    case "--log_instruction_file":
    case "--log_instruction_period":
