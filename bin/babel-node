    case "--expose-gc":
      args.unshift("--expose-gc");
      break;

    case "--use_strict":
    case "--es_staging":
    case "--harmony":
    case "--harmony_shipping":
    case "--harmony_modules":
    case "--harmony_arrays":
    case "--harmony_array_includes":
    case "--harmony_regexps":
    case "--harmony_arrow_functions":
    case "--harmony_proxies":
